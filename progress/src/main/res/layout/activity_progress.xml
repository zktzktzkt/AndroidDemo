<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF569EF7"
    android:orientation="vertical"
    tools:context="com.zkt.progress.ProgressActivity">

    <com.zkt.progress.triangleprogress.TriangleProgressView
        android:id="@+id/triangleProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:background_color="@color/progress_bg_color"
        app:gap="4dp"
        app:number_color="@color/white"
        app:number_size="14sp"
        app:progress_color="@color/progress_color"
        app:triangle_color="@color/white"
        app:triangle_side_length="5dp"
        />

    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"/>

</LinearLayout>
